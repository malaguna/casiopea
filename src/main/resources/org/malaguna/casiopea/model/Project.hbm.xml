<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.malaguna.casiopea.model.Project" table="project">

		<id name="code" type="int">
			<column name="code" />
			<!-- Be careful, MySQL does not support SEQUENCES !!! 
			  This generator is compliant with Oracle, PostgreSql, 
			  HSQLDB, DB", SqlServer, ... -->
			<generator class="sequence">
				<param name="sequence">seq_project</param>
			</generator>
		</id>

		<property name="name" type="string" length="25" not-null="true">
			<column name="name" />
		</property>

		<property name="start" type="date">
			<column name="start" not-null="true" />
		</property>

		<property name="active" type="boolean">
			<column name="active" not-null="true" />
		</property>

	</class>
</hibernate-mapping>
